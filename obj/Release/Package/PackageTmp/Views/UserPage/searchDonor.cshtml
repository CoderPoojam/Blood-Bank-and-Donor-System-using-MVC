@model IEnumerable<BloodProject.Models.DonApprovalStatus>
@{
    ViewBag.Title = "searchDonor";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <link href="~/Css/searchDonor.css" rel="stylesheet" />
}






<head>
    <meta name="viewport" content="width=device-width" />
    <title>Donation Request</title>

    <link href="~/Css/searchDonor.css" rel="stylesheet" />

</head>
<body>
    <div class="main">
        <h2>Donation Request List</h2><br />
        <div class="text-center">
        <p>
            @using (Html.BeginForm("searchDonor", "UserPage", FormMethod.Get))
            {
                <b>Search By:</b>
                @Html.RadioButton("searchBy", "Address", true) <text>Address</text>
                @Html.RadioButton("searchBy", "BloodGroup") <text>BloodGroup</text><br /><br />

                @Html.TextBox("search") <input type="submit" value="Search" />
            }
        </p>
            </div>
        <br/>
        <div class="table">
            <table align="center" @*border="1" width="50px"*@>
                <tr>
                    <th>
                        @Html.Display("Name")
                        @Html.DisplayNameFor(model => model.Donr_Name)
                    </th>



                    <th>
                        @Html.Display("Blood Group")
                        @Html.DisplayNameFor(model => model.Donr_BloodGroup)
                    </th>

                    <th>
                        @Html.Display("Address")
                        @Html.DisplayNameFor(model => model.Donr_Address)
                    </th>

                </tr>
                @if (Model.Count() == 0)
                {

                    <tr>
                        <td colspan="5">No Matching Records</td>
                    </tr>

                }
                else
                {

                    foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Donr_Name)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Donr_BloodGroup)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Donr_Address)
                            </td>
                        </tr>
                    }
                }
            </table>

        </div>
        <div>
            @Html.ActionLink("Back", "UserMainPage")
        </div>
    </div>



</body>
