@{
    ViewBag.Title = "AdminMainPage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<head>
    <meta name="viewport" content="width=device-width" />
    <title>Admin Main Page</title>
    <link href="~/Css/AdminMainPage.css" rel="stylesheet" />

</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()


        <div class="form-horizontal">
            <form>
                <h2>We need each other...Donate blood</h2>

                <div class="btn1">
                    <button type="button" onclick="location.href='@Url.Action("ViewDonationRequest","AdminPage")'">See Donation Request </button>
                </div>


                <div class="btn2">
                    <button type="button" onclick="location.href='@Url.Action("Admin","AdminPage")'">Update Blood Availability</button>
                </div>


                <div class="btn3">
                    <button type="button" onclick="location.href='@Url.Action("ViewBloodRequest","AdminPage")'">See Blood Request</button>
                </div>



            </form>

        </div>


    }

</body>
