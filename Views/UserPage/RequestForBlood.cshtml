@model BloodProject.Models.Registration

@{
    ViewBag.Title = "Requestforblood";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <link href="~/Css/RequestForDonation.css" rel="stylesheet" />
}







<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Css/reqFD.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>


</head>

<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="main">

            <div class="form-horizontal">
                <form>
                    <h2>Form for Blood Donation</h2>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <div class="sub">



                                @Html.TextBox("Name", (object)ViewBag.f, htmlAttributes: new { @class = "form-control", @style = "width:200px;" })
                            </div>
                        </div>
                    </div>

                    <br />
                    <div class="form-group">
                        @Html.LabelFor(model => model.Email, "Email", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <div class="sub">


                                @Html.TextBox("Email", (object)ViewBag.g, htmlAttributes: new { @class = "form-control", @style = "width:200px;" })
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="form-group">
                        @Html.LabelFor(model => model.Mobile, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <div class="sub">


                                @Html.TextBox("Mobile", (object)ViewBag.h, htmlAttributes: new { @class = "form-control", @style = "width:200px;" })
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="form-group">
                        @Html.LabelFor(model => model.BloodGroup, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">


                            @Html.TextBox("Bloodgroup", (object)ViewBag.i, htmlAttributes: new { @class = "form-control", @style = "width:200px;" })


                        </div>
                    </div>
                    <br />
                    <div class="form-group">
                        @Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <div class="sub">


                                @Html.TextBox("Address", (object)ViewBag.j, htmlAttributes: new { @class = "form-control", @style = "width:200px;" })

                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="clear"></div>
                    <div class="submit-agileits">
                        <input type="submit" value="Request" name="alertMessage" id="btnAlertMessage">
                    </div>
                    <div>
                        @Html.ActionLink("Back", "UserMainPage")
                    </div>

                    @if (ViewBag.Mes != null)
                    {
                        <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Mes");
                       };
                        </script>
                    }
                </form>
            </div>
        </div>
    }








    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</body>



