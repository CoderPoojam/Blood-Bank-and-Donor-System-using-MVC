@model IEnumerable<BloodProject.Models.Registration>
@{
    ViewBag.Title = "UserMainPage";
}

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Home Page</title>

    <link href="~/Css/UserMainPage.css" rel="stylesheet" />
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="main">
            <div class="form-horizontal">
                <form>
                    <h2>Donate BLOOD - Gift LIFE</h2>

                    <div class="btn1">
                        <button type="button" onclick="location.href='@Url.Action("RequestForDonation","UserPage")'">Request For Donation</button>
                    </div>


                    <div class="btn2">
                        <button type="button" onclick="location.href='@Url.Action("searchDonor","UserPage")'">Search Blood Donor</button>
                    </div>


                    <div class="btn3">
                        <button type="button" onclick="location.href='@Url.Action("RequestForBlood","UserPage")'">Request For Blood</button>
                    </div>


                    <div class="btn4">
                        <button type="button" onclick="location.href='@Url.Action("ViewBloodStock","UserPage")'">View Blood Availability</button>
                    </div>
                </form>

            </div>
        </div>

    }

</body>
